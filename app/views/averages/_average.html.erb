<% if Average.exists?(user_id: current_user.id, weather_id: @pressure) %>
  <%= link_to weather_averages_path(weather_id: @pressure), method: :delete, class: "btn btn-outline-danger btn-lg w-100 mt-5" do %>
    <span class="fa-pull-left">頭が痛い</span>
  <% end %>
<% else %>
  <%= link_to weather_averages_path(weather_id: @pressure), method: :post, class: "btn btn-outline-success btn-lg w-100 mt-5" do %>
    <span class="fa-pull-left">頭が痛い</span>
  <% end %>
<% end %>
